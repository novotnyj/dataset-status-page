<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Status page</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <div class="navbar-nav" id="intervalsNavBar">
        </div>
    </div>
</nav>

<div class="container pt-4">
    {{#each charts}}
        <div class="container {{this.id}}">
            <div class="row">
                <div class="col-12">
                    <h4>{{this.name}}</h4>
                </div>
                <div class="col-12 no-data-alert">
                    <div class="alert alert-secondary">No data yet...</div>
                </div>
                <canvas id="{{this.id}}"></canvas>
            </div>
            {{#if this.showTable}}
                <table id="table-{{this.id}}" class="table table-striped">
                    <thead></thead>
                    <tbody></tbody>
                </table>
            {{/if}}
        </div>
    {{/each}}
</div>
